{
  "name": "yongui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "build-storybook": "storybook build",
    "commit": "cz",
    "dev": "vite",
    "format": "biome check .",
    "format:fix": "biome check --write .",
    "prepare": "simple-git-hooks && panda codegen",
    "preview": "vite preview",
    "sb": "storybook dev -p 6006",
    "storybook": "storybook dev -p 6006",
    "test": "vitest",
    "test-storybook": "test-storybook",
    "test:sb": "bun run sb & sleep 5 && bun run test-storybook && kill %1"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run test:sb && bunx lint-staged"
  },
  "lint-staged": {
    "*.{css,js,json,jsx,ts,tsx}": "biome check --write --unsafe --no-errors-on-unmatched --files-ignore-unknown=true",
    "package.json": "sort-package-json"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-radio-group": "^1.3.8",
    "axe-playwright": "^2.2.2",
    "chromatic": "^13.2.1",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@chromatic-com/storybook": "^4.1.1",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/cz-commitlint": "^20.0.0",
    "@commitlint/prompt": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@faker-js/faker": "^10.0.0",
    "@pandacss/dev": "^1.4.0",
    "@storybook/addon-a11y": "^9.1.8",
    "@storybook/addon-designs": "^10.0.2",
    "@storybook/addon-docs": "^9.1.8",
    "@storybook/addon-themes": "^9.1.8",
    "@storybook/react-vite": "^9.1.8",
    "@storybook/test-runner": "^0.23.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "commitizen": "^4.3.1",
    "commitlint": "^20.0.0",
    "globals": "^16.4.0",
    "happy-dom": "^19.0.1",
    "lint-staged": "^16.2.3",
    "simple-git-hooks": "^2.13.1",
    "sort-package-json": "^3.4.0",
    "storybook": "^9.1.8",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-svgr": "^4.5.0",
    "vitest": "^3.2.4"
  }
}
