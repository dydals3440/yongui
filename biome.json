{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.mjs",
      "**/*.json",
      "!**/dist",
      "!**/storybook-static",
      "!**/styled-system",
      "!**/.direnv",
      "!**/.next",
      "!**/.claude",
      "!**/.zed"
    ]
  },
  "linter": {
    "domains": {
      "next": "recommended",
      "react": "recommended"
    },
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error"
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "error",
          "options": {
            "functions": ["clsx", "cn", "cva", "tw", "tw.*"]
          }
        }
      },
      "style": {
        "useSelfClosingElements": "error"
      },
      "suspicious": {
        "noVar": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space"
  },
  "css": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
